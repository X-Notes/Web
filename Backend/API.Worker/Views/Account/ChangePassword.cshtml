@model API.Worker.Models.DTO.ChangePasswordViewModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>Password changing for user: @Model.Email</h2>
<form asp-action="ChangePassword" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <input type="hidden" asp-for="Email" />
     
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
        <div class="form-group">
            <label asp-for="CurrentPassword" class="control-label">Current password</label>
            <input type="text" asp-for="CurrentPassword" class="form-control" />
        </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-dark" />
    </div>
</form>